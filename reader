#!/bin/bash

red='\x1B[0;31m'
gray='\x1B[0;30m'
#dark_gray='\x1B[38;5;232m'
NC='\x1B[0m'

tput civis

function finish {
  tput cnorm
}

trap finish EXIT

readonly leader="                        "

clear
echo -e "\n\n\n$leader${red}ready?${NC}"
sleep 1

DONE=false

while IFS='' read -r LINE || [[ -n "$LINE" ]]; do

  if [ -z "$LINE" ]; then
    continue
  fi

  ARRAY=($LINE ¶)

  for i in "${!ARRAY[@]}" ; do
    clear

    lastword=`[[ $(($i - 1)) > 0 ]] && echo -n ${ARRAY[$(($i - 1))]} || echo -n ""`
    word="${ARRAY[$i]}"
    nextword=`[[ $(($i + 1)) < ${#ARRAY[@]} ]] && echo -n ${ARRAY[$(($i + 1))]} || echo -n ""`

    lastwordlen=${#lastword}
    wordlen=${#word}

    if [ $wordlen = 1 ]; then
      prefixlen=0
    elif [ $wordlen -le 3 ]; then
      prefixlen=1
    else
      prefixlen=$(( $wordlen / 2 - 1))
    fi

    prelenpp=$(($prefixlen + 1))
    leaderlen=$(( ${#leader} - $prefixlen - 1 - $lastwordlen ))

    echo -ne "\n\n$leader${gray}|${NC}\n${leader:0:$leaderlen}"
    echo -ne "${gray}${lastword}${NC} "
    echo -ne "${word:0:$prefixlen}${red}${word:$prefixlen:1}${NC}${word:$prelenpp}"
    echo -e " ${gray}${nextword}${NC}"
    echo -e "$leader${gray}|${NC}"

    if [ $word = "¶" ]; then
      sleep "0.5"
    else
      sleeplen=$((130 + 7 * $wordlen))
      sleep "0.$sleeplen"
    fi
  done
done
